// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Backend table (from FastAPI backend)
model Client {
  id         String   @id @default(uuid())
  name       String
  summary    String?  @db.Text
  docId      String   @unique @map("doc_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([createdAt])
  @@index([docId])
  @@map("clients")
}

// Enums
enum EvidenceReliability {
  High
  Medium
  Low
  Unverified
}

enum AlertSeverity {
  High
  Medium
  Low
}

// Main Analysis Table
model Analysis {
  id                String   @id @default(uuid())
  caseName          String
  personName        String
  crimeConvicted    String   @db.Text
  innocenceClaim    String   @db.Text
  paroleBoardFocus  String   @db.Text
  summary           String   @db.Text
  riskScore         Int      // 0-100
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  keyQuotes         KeyQuote[]
  timelineEvents    TimelineEvent[]
  inconsistencies   Inconsistency[]
  evidenceItems     EvidenceItem[]
  precedentCases    PrecedentCase[]
  criticalAlerts    CriticalAlert[]

  @@index([createdAt])
  @@index([riskScore])
}

// Key Quotes from documents
model KeyQuote {
  id         String   @id @default(uuid())
  analysisId String
  quote      String   @db.Text
  lineNumber String
  context    String   @db.Text

  analysis   Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
}

// Timeline Events
model TimelineEvent {
  id         String   @id @default(uuid())
  analysisId String
  date       String
  event      String   @db.Text
  confidence Float    // 0-1

  analysis   Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
}

// Inconsistencies between statements
model Inconsistency {
  id         String   @id @default(uuid())
  analysisId String
  statement1 String   @db.Text
  source1    String
  statement2 String   @db.Text
  source2    String
  analysis   String   @db.Text

  analysisRef Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
}

// Evidence Items
model EvidenceItem {
  id          String               @id @default(uuid())
  analysisId  String
  evidence    String               @db.Text
  type        String
  reliability EvidenceReliability
  notes       String               @db.Text

  analysis    Analysis             @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
}

// Precedent Cases
model PrecedentCase {
  id         String   @id @default(uuid())
  analysisId String
  caseName   String
  summary    String   @db.Text
  outcome    String   @db.Text

  analysis   Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
}

// Critical Alerts
model CriticalAlert {
  id          String        @id @default(uuid())
  analysisId  String
  title       String
  description String        @db.Text
  severity    AlertSeverity

  analysis    Analysis      @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
}
