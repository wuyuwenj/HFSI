# Neo4j Configuration
# Neo4j database connection URL (bolt protocol)
NEO4J_URL=bolt://localhost:7687

# Neo4j username (default is 'neo4j')
NEO4J_USER=neo4j

# Neo4j password (change this!)
NEO4J_PASSWORD=your_neo4j_password

# Neo4j database name (optional, defaults to 'legal_documents')
NEO4J_DATABASE=legal_documents

# Supabase Configuration
# Your Supabase project URL (found in Project Settings → API)
SUPABASE_URL=https://your-project.supabase.co

# Supabase Service Role Key (found in Project Settings → API)
# WARNING: Keep this secret! Never commit the actual key.
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Supabase Storage bucket name for document storage
SUPABASE_BUCKET=legal-documents

# Ollama Configuration
# Ollama API base URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Ollama LLM model to use for document analysis and Q&A
# Run: ollama pull qwen3:8b
OLLAMA_MODEL=qwen3:8b

# Ollama embedding model for vector embeddings
# Run: ollama pull embeddinggemma
OLLAMA_EMBEDDING_MODEL=embeddinggemma
